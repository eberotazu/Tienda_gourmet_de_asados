<div id="root" class="container-fluid font bground">
  <div class="row">
    <div class="col-12 col-lg-4 pt-1">
      <h1 class="p-5">Usuarios</h1>
    </div>
    <div class="d-flex justify-content-center" id="spiner"></div>
  </div>
  <div class="row px-5">
    {{#each users}}
      <div class="col-12 col-lg-3 pt-5 user-container" data-user-id="{{this.email}}" style="border: 2px solid green">
        <p>Nombre: {{this.name}}</p>
        <p>Apellido: {{this.lastname}}</p>
        <p>Correo electr√≥nico: {{this.email}}</p>
        <label for="combo">Rol: </label>
        <select class="role-combo" data-user-id="{{this.email}}">
          {{#if this.isUser}}
            <option value="user" selected>Usuario</option>
            <option value="premium">Premium</option>
            <option value="admin">Administrador</option>
          {{/if}}
          {{#if this.IsPremium}}
            <option value="user">Usuario</option>
            <option value="premium" selected>Premium</option>
            <option value="admin">Administrador</option>
          {{/if}}
          {{#if this.isAdmin}}
            <option value="user">Usuario</option>
            <option value="premium">Premium</option>
            <option value="admin" selected>Administrador</option>
          {{/if}}
        </select>
        <br /><br />
        <div class="centrarElementos">
          <button class="btnAgregarProducto update-button" data-user-id="{{this.email}}">Actualizar</button>
          <button class="btnAgregarProducto delete-button" data-user-id="{{this.email}}">Eliminar</button>
        </div>
        <br />
      </div>
    {{/each}}
  </div>
</div>
<br /><br />

<script src="/js/user.js"></script>